{
"$schema" : "http://json-schema.org/draft-04/schema#",
"type" : "object",
"properties" : {
  "schema" : { "type" : "string", "enum" : [ "NetworkList" ] },
  "rc-id" : { "type" : "number", "multipleOf" : 1.0 },
  "networks" : {
    "type" : "array",
    "items" : {
      "type" : "object",
      "properties" : {
        "type" : { "type" : "string", "enum" : [ "automatic", "deleted", "manual"] },
        "name" : { "type" : "string" },
        "ipver" : { "type" : "string", "enum" : [ "ipv4", "ipv6" ] },
        "ipaddr" : { "type" : "string" },
        "prefixlen" : { "type" : "number", "multipleOf" : 1.0, "minimum" : 0, "maximum" : 128,"exclusiveMinimum" : true, "exclusiveMaximum" : false  },
        "mac" : { "type" : "string", "pattern" : "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$" }
      },
      "required" : [ "type", "ipver", "ipaddr", "prefixlen" ],
      "additionalProperties" : false
    }
  }
},
"required" : [ "schema", "rc-id", "networks"],
"additionalProperties" : false
}
