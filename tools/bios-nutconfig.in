#! \file    bios-nutconfig(.in)
#  \brief   Helper script for autoconfig agent
#  \author  Tomas Halman <TomasHalman@Eaton.com>
#  \details Helper script for autoconfig agent. It creates new NUT configuration
#           from files stored in /etc/bios/nut/devices.

set -e

export PATH=/bin:/usr/bin
export LC_ALL=C
#hack for Makefile.am and make distcheck
export PROG=@libexecdir@/@PACKAGE@/bios-nutconfig

die() {
    echo "${@}" >&2
    exit 1
}

NUTCONFIGDIR=/etc/nut
[ -d "$NUTCONFIGDIR" ] || NUTCONFIGDIR=/etc/ups
[ -d "$NUTCONFIGDIR" ] || die "NUT configuration directory not found"
NUTCONFIG="$NUTCONFIGDIR/ups.conf"

mkdir -p /etc/@PACKAGE@/nut/devices
chown -R bios:bios-infra /etc/@PACKAGE@

if cat /etc/@PACKAGE@/nut/devices/* 2> /dev/null > "$NUTCONFIG.tmp"; then
    mv "$NUTCONFIG.tmp" "$NUTCONFIG"
    exit 0
else
    rm "$NUTCONFIG.tmp" >/dev/null 2>&1
    die "No configuration found"
fi
