## Parameters
# HOSTNAME
# PORT
# CONNECTION_TIMEOUT (in seconds)
# CREDENTIAL_ID
# COMMANDS

if [ "$#" -ne 5 ]; then
  printf "Usage: ${0} HOSTNAME PORT CONNECTION_TIMEOUT CREDENTIAL_ID COMMANDS\n\n" >&2
  exit 1
fi

HOSTNAME=${1}
PORT=${2}
CONNECTION_TIMEOUT=${3}
CREDENTIAL_ID=${4}
COMMANDS=${5}

USERNAME=$(etn-secwcmd ${CREDENTIAL_ID} -U -u)
if [ "$?" -ne 0 ]; then
    exit 104
fi

PASSWORD=$(etn-secwcmd ${CREDENTIAL_ID} -U -p)
if [ "$?" -ne 0 ]; then
    exit 104
fi

printf "User and password retrieved from credential.\n" >&2
printf "Connecting to ${USERNAME}@${HOSTNAME} port ${PORT}...\n" >&2

sshpass -p ${PASSWORD} ssh ${USERNAME}@${HOSTNAME} -p ${PORT} -o ConnectTimeout=${CONNECTION_TIMEOUT} -o StrictHostKeyChecking=no ${COMMANDS}

exit $?