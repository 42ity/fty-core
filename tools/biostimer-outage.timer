[Unit]
Description=BIOS-Timer service that re-counts outage statistics (regular runner)

[Timer]
# Time to wait after booting before we run first time
OnBootSec=10min
### Time between running each consecutive time
### OnUnitActiveSec=1h
# Run every midnight
OnCalendar=*-*-* 00:00:00
# Run instantly if last run was skipped (e.g. system powered off)
Persistent=true
# Which unit to trigger:
Unit=biostimer-outage.service

[Install]
WantedBy=multi-user.target
