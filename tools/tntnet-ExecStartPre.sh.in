#! \file   tntnet-ExecStartPre.sh(.in)
#  \author Jim Klimov <EvgenyKlimov@Eaton.com>
#  \brief  Not yet documented file

[ -n "$1" ] || { echo "ERROR: instance name required (suffix after tntnet@ in systemd)" >&2; exit 1; }
INST="$1"

echo "Check requirements of tntnet@$INST instance for BIOS"

set -e
# TODO: Substitute dirname properly via .in parsing
/usr/share/bios/scripts/ssl-create.sh
/usr/share/bios/scripts/xml-cat.sh /etc/tntnet/"$INST".d /etc/tntnet/"$INST".xml

F=/etc/default/bios
test -f "${F}" || touch ${F}
chown www-data: ${F}
chmod 0644 ${F}
