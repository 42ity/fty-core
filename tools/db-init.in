#!/bin/sh

prefix="@prefix@"

if [ -z "`echo "select 'working';" | mysql -u root | grep working`" ]; then
	echo "Can't connect to database"
	exit 1
fi

if [ -z "`echo "show databases;" | mysql -u root | grep '^box_utf8$'`" ]; then
	if [ -r "@datarootdir@/@PACKAGE@/sql/initdb.sql" ]; then
		cat "@datarootdir@/@PACKAGE@/sql/initdb.sql" | mysql -u root || exit 1
	else
		echo "Can't read '@datarootdir@/@PACKAGE@/sql/initdb.sql' !!!"
		exit 1
	fi
fi
